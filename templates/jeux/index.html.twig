{% extends 'base.html.twig' %}

{% block title %}Jeux disponible
{% endblock %}

{% block body %}
	{% for row in jeux %}
		<div class="card">
			<img src="{{row.imgCouverture}}" alt="mario" style="width:100%">
			<h1>{{row.nomJeux}}</h1>
			<p class="price">{{row.noteMoyenne}}</p>
			<p>{{row.description}}</p>
			<p>
				<button>Afficher le jeu</button>
			</p>
		</div>
	{% endfor %}
{% endblock %}
