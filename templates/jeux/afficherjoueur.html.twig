{% extends "base.html.twig" %}

{% block body %}
	{% for row in joueurs %}
		<div class="card">
			<img src="dossierImage/{{row.avatar}}" alt="pdp" style="width:100%">
			<h1>{{row.nomJoueur}}</h1>
			<h1>{{row.pseudonyme}}</h1>
			<br>
			<a href="{{path('informationjoueur',{'id':row.id})}}"><button type="button" class="btn btn-outline-info">Informations</button></a>
			<br>
			<a href="{{path('editJoueur',{'id':row.id})}}"><button type="button" class="btn btn-outline-primary">Modifier le Profil</button></a>
			<br>
			<a href="{{path('deletejoueur',{'id':row.id})}}"><button type="button" class="btn btn-outline-danger">Supprimer le Profil</button></a>
			<br>
		</div>
	{% endfor %}
{% endblock %}
